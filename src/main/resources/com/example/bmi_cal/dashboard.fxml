   <children>
      <Button layoutX="14.0" layoutY="460.0" mnemonicParsing="false" onAction="#backtologin" prefHeight="126.0" prefWidth="129.0" style="-fx-background-color: #05d9fa; -fx-background-radius: 50;" styleClass="backbutton" />
      <Label alignment="CENTER" layoutX="30.0" layoutY="14.0" prefHeight="71.0" prefWidth="298.0" text="BMI VALUES" textAlignment="CENTER" textFill="#09eb1c" underline="true">
         <font>
            <Font name="System Bold Italic" size="36.0" />
         </font>
      </Label>
      <Label alignment="CENTER" layoutX="14.0" layoutY="85.0" prefHeight="46.0" prefWidth="369.0" style="-fx-background-color: #07f5f1; -fx-background-radius: 20;" text="below 18.5 – you're in the underweight range">
         <font>
            <Font name="System Bold Italic" size="15.0" />
         </font>
      </Label>
      <Label alignment="CENTER" layoutX="13.0" layoutY="131.0" prefHeight="46.0" prefWidth="369.0" style="-fx-background-color: #05f515; -fx-background-radius: 20;" text="between 18.5 and 24.9 – you're in the healthy weight range">
